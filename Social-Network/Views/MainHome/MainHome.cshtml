    }

    .MainRibbon {
        position: fixed;
        left: 28%;
        top: 16%;
        display: inline-block;
        background-color: rgb(0, 0, 0, 0.36);
        height: 515px;
        width: 70%;
        border-radius: 6px;
        word-wrap: break-word;
        overflow-y: scroll;
        box-shadow: 15px 20px 30px rgba(0,0,0,0.3), 15px 20px 20px rgba(0,0,0,0.3);
    }

        .MainRibbon::-webkit-scrollbar {
            width: 0px;
        }

    .Level1_1 {
        text-align: center;
        font-family: Arial, Helvetica, sans-serif;
    }

    .Level2_1 {
        font-size: 38px;
        margin-top: 3.5rem;
    }

    .Level2_2 {
        margin-top: 10px;
        text-align: center;
    }

    .Level3_3 {
        margin-top: 15px;
    }

    .Level3_4 {
        font-size: 15px;
        color: rgb(0, 0, 0, 0.68);
        margin-top: 30px;
        margin-bottom: 2rem;
    }

    .Level4_1 {
        padding-top: 30px;
        padding-left: 25px;
        margin-top: 20px;
        border-bottom: 1px solid white;
        margin-bottom: 30px;
        margin-left: 20px;
        margin-right: 20px;
        height: 420px;
        background-color: rgb(0, 0, 0, 0.11);
        border-radius: 15px;
    }

    .level6_1 {
        display: inline-block;
        height: 100px;
        width: 68%;
    }

    .level6_2 {
        display: inline-block;
    }

    .MenuButton {
        background-color: rgb(0, 0, 0, 0.29);
        text-align: center;
        border-radius: 20px;
        height: 34px;
        width: 10%;
        position: fixed;
        margin-top: 2.4rem;
        left: 7.6%;
        box-shadow: 6px 6px 6px rgba(0,0,0,0.08), 6px 6px 6px rgba(0,0,0,0.08), 6px 6px 6px rgba(0,0,0,0.08);
    }

    .LikeHime{
        margin-top: -5%;
    }

    @@media screen and (max-width: 1300px) {
        .ImgAvatar {
            height: 110px;
            width: 110px;
            border-radius: 120px;
        }
    }

    @@media screen and (max-width: 1200px) {
        .ImgAvatar {
            height: 100px;
            width: 100px;
            border-radius: 120px;
        }
    }

    @@media screen and (max-width:1100px) {
        .MainBody {
            display: inline-block;
            text-align: center;
            margin-top: 6rem;
        }

        .MainHome {
            display: block;
            height: 100px;
            width: 85%;
            position: fixed;
            left: 6.9%;
            top: 18%;
            margin: -50px 0 0 0;
            clear: both;
        }

        .MainRibbon {
            display: block;
            height: 452px;
            margin-left: 0;
            margin-right: 0;
            width: 85%;
            position: fixed;
            left: 6.9%;
            top: 28.9%;
            clear: both;
        }

        .Level1_1 {
            text-align: left;
            margin-top: -21px;
        }

        .HR1 {
            display: none;
        }

        .HR2 {
            display: none;
        }

        .Level1_1 {
            display: flex;
            text-align: center;
            font-family: Arial, Helvetica, sans-serif;
        }

        .Level2_1 {
            display: inline-block;
            position: fixed;
            top: 5%;
            margin-left: 2%;
            margin-left: 10px;
            font-size: 32px;
        }

        .Level2_2 {
            position: fixed;
            top: 9%;
        }

        .Level3_3 {
            display: inline-block;
            position: fixed;
            left: 45.8%;
        }

        .Level3_4 {
            display: inline-block;
            position: fixed;
            left: 70%;
        }

        .ImgAvatar {
            height: 62px;
            width: 62px;
            border-radius: 120px;
        }

        .MenuButton {
            background-color: rgb(0, 0, 0, 0.28);
            box-shadow: none;
            border-radius: 20px;
            width: 100px;
            height: 26px;
            padding-bottom: 15px;
            position: inherit;
            margin-top: 5rem;
            left: 9%;
        }
    }
</style>

