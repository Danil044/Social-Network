@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "";
}

<div style="text-align: center; " class="col-md-4 logMain">
    <h1>@ViewData["Title"]</h1>
    <h4 style="font-weight: bold;font-size: 24px;">YOUR EMAIL</h4>
    <hr style="height: 3px; background-color: chocolate;" />
    <div >
        <div >
            <form method="post">
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .logMain {
        height: auto;
        width: auto;
        background-color: rgb(0,0,0,0.4);
        border-radius: 20px;
        box-shadow: 16px 25px 32px rgba(0,0,0,0.25), 16px 16px 16px rgba(0,0,0,0.22);
        color: black;
        text-align: center;
        padding-top: 15px;
        padding-bottom: 15px;
        margin-top: 14rem;
        margin-left: 31.5%;
    }

    @@media screen and (max-width:800px) {
        .logMain {
            margin-left: 40px;
            margin-right: 40px;
            margin-top: 14rem;
        }
    }

</style>
