@page
@model IndexModel
@{
    ViewData["Title"] = "";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Social_Network.Data.social_network.User> SignInManager
@inject UserManager<Social_Network.Data.social_network.User> UserManager
@{
    var user = UserManager.GetUserAsync(User).Result;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6 logMain">
        <form id="profile-form" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Input.User_Name"></label>
                <input asp-for="Input.User_Name" class="form-control" style="text-align: center;" />
                <span asp-validation-for="Input.User_Name" class="text-danger"></span>
            </div>

            <!--
        <div class="form-group" style="text-align: center; display: flex;">
        <div style="display: inline-block;">
            <input type="file" name="fileToSocialNetwork" />

            <span asp-validation-for="Input.AvatartUrl" class="text-danger"></span>
        </div>
        <div style="display: inline-block;">
            <img src="user.AvatarURL" style="width: 120px;height: 120px; border-radius: 100px; margin-bottom: 10px;" />
        </div>
        </div>
    -->
            <label>
                <div class="photoImg">
                    <img src="@user.AvatarURL" style="width: 120px;height: 120px; border-radius: 100px; margin-bottom: 10px;" />
                    <input type="file" name="fileToSocialNetwork" multiple accept="image/*" hidden />
                    <div id="plusImg">
                        <img src="/storage/icon/plus-icon.png" style="height: 40px; width: 40px;"/>
                    </div>
                </div>
                <span asp-validation-for="Input.AvatartUrl" class="text-danger"></span>

            </label>

            <div class="form-group">
                <label asp-for="Input.Status"></label>
                <input asp-for="Input.Status" class="form-control" />
                <span asp-validation-for="Input.Status" class="text-danger"></span>
            </div>

            <div style="display: flex;">
                <div class="form-group" style="display: inline-block; margin-right: 20px;">
                    <label asp-for="Input.Surname_Name"></label>
                    <input asp-for="Input.Surname_Name" class="form-control" style="text-align: center;" />
                    <span asp-validation-for="Input.Surname_Name" class="text-danger"></span>
                </div>
                <div class="form-group" style="display: inline-block;">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" style="text-align: center;" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-outline-dark">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .logMain {
        height: auto;
        width: 600px;
        background-color: rgb(0,0,0,0.4);
        border-radius: 20px;
        box-shadow: 16px 25px 32px rgba(0,0,0,0.25), 16px 16px 16px rgba(0,0,0,0.22);
        color: black;
        text-align: center;
        padding-top: 15px;
        padding-bottom: 5px;
        margin-left: 5rem;
    }

    #plusImg {
        display: none;
    }

    .photoImg:hover #plusImg {
        display: block;
        position: absolute;
        z-index: 9999;
        margin-top: -5.6rem;
        margin-left: 2.3rem;
    }

    @@media screen and (max-width:800px) {
        .logMain {
            margin-left: 40px;
            margin-right: 40px;
        }
    }
</style>
