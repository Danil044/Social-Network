@page
@model RegisterModel
@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>

<div class="row" style="text-align: center;">
    <div class="col-md-4 logMain" >
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 style="color: black; font-weight: bold">CREATE AN ACCOUNT</h4>
            <hr style="height: 3px; background-color: chocolate;" />
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div style="display: flex;">
                <div style="display: inline-block;">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div style="display: inline-block; margin-left: 15px;">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" style="margin-top: 15px;">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-dark">Register</button>
        </form>
        <div>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/storage/icon/exit-icon.png" style="height: 15px; margin-top: 10px;" />
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .logMain {
            height: auto;
            width: 600px;
            background-color: rgb(0,0,0,0.4);
            border-radius: 20px;
            box-shadow: 16px 25px 32px rgba(0,0,0,0.25), 16px 16px 16px rgba(0,0,0,0.22);
            color: black;
            text-align: center;
            padding-top: 15px;
            padding-bottom: 5px;
            margin-top: 7rem;
            margin-left: 31.5%;
        }

        @@media screen and (max-width:800px) {
            .logMain {
                margin-left: 40px;
                margin-right: 40px;
                margin-top: 7rem;
            }
        }

    </style>
}
